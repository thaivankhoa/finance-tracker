<table class="table table-striped">
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Current Price</th>
    </tr>
    <% if @user.id == current_user %>
    <th>Actions</th>
    <% end %>
  </thead>
  <tbody>
    <% @user.stocks.each do |user_stock| %>
    <tr>
      <td><%= user_stock.ticker %></td>
      <td><%= user_stock.price %></td>
      <% if current_user.id == @user.id %>
      <td>
        <%= link_to "Delete", user_stock_path(UserStock.where(stock_id: user_stock.id, user_id: @user.id).first), method: :delete, :data => {:confirm => 'Are you sure?'}, :class => 'btn btn-xs btn-danger' %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
